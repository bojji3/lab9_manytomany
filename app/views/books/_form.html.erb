<%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%= form.label :publication_date %>
      <%= form.datetime_select :publication_date %>
    </div>
  
    <div class="field">
      <%= form.label :edition %>
      <%= form.number_field :edition %>
    </div>
  
    <div class="field">
      <%= form.label :authors %>
      <%= form.collection_select :author_ids, Author.all, :id, :name, {}, { multiple: true } %>
    </div>
  
    <div class="field">
      <%= form.label :libraries %>
      <%= form.collection_select :library_ids, Library.all, :id, :name, {}, { multiple: true } %>
  
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>